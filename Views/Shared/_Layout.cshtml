<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - intro</title>
    
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/Blogs.styles.css" asp-append-version="true" />
   
    
    <link rel="stylesheet" href="~/lib/bootstrap/quilljs/quill.snow.css"/>
    <link rel="stylesheet" href="~/lib/bootstrap/quilljs/quill.bubble.css"/>

    <environment include="Development">
        <link href="~/lib/bootstrap/bootstrap.min.css" rel="stylesheet">
    </environment>
    <environment exclude="Development">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    </environment>

</head>

<body class="bg-light">
    @Html.Partial("_HeaderPartial")
   
    @RenderBody()

    @await RenderSectionAsync("Scripts", required: false)

    <script src="~/lib/bootstrap/quilljs/quill.min.js" ></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="~/lib/bootstrap/bootstrap.bundle.min.js"></script>
</body>

</html>
